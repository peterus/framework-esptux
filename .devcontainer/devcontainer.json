{
	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "ubuntu-22.04"
		}
	},
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"settings": {
		"clang-format.executable": "clang-format-11"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools",
				"xaver.clang-format",
				"llvm-vs-code-extensions.vscode-clangd",
				"twxs.cmake"
			]
		}
	},
	"features": {
		"git": "os-provided",
		"git-lfs": "latest"
	}
}
